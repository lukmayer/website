<ul class="pub-list list">
  <% items.forEach(function(item, index) { %>
    <li <%= metadataAttrs(item) %>>
      <div class="callout callout-important" style="border: 1px solid #444; border-radius: 0px; overflow: hidden;">
        <div class="callout-header" style="padding: 20px; border: none;">
          <div class="callout-title-container" data-index="<%= index %>" style="cursor: pointer;">
            <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 15px;">
              <div style="flex: 1;">
                <strong><em style="font-size: 1.5rem; line-height: 1.3;">
                  "<%- item.title %>"
                </em></strong>
              </div>
              <span class="toggle-arrow" style="color: #888; font-size: 1.2rem; margin-left: 15px;">â–¼</span>
            </div>

            <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
              <div style="flex: 1; min-width: 300px;">
                <% if (item.authors) { %>
                  <div style="margin-bottom: 8px; font-size: 1rem;"><%- item.authors %></div>
                <% } %>
                <% if (item.journal) { %>
                  <div style="color: #888; font-style: italic;"><%- item.journal %></div>
                <% } %>
              </div>

              <% if (item.osf || item.paper || item.pdf) { %>
                <div style="display: flex; gap: 10px; flex-shrink: 0;">
                  <% if (item.osf) { %>
                    <a href="<%- item.osf %>" class="research-btn research-btn-osf" target="_blank" rel="noopener noreferrer">OSF</a>
                  <% } %>
                  <% if (item.paper) { %>
                    <a href="<%- item.paper %>" class="research-btn research-btn-paper" target="_blank" rel="noopener noreferrer">Link</a>
                  <% } %>
                  <% if (item.pdf) { %>
                    <a href="<%- item.pdf %>" class="research-btn research-btn-pdf" target="_blank" rel="noopener noreferrer">PDF</a>
                  <% } %>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <div class="callout-body-container" id="pub-<%= index %>" style="display: none; border: none;">
          <% if (item.image) { %>
            <div style="text-align: center; margin: 20px 0;">
              <img src="<%- item.image %>" alt="Image for <%- item.title %>" style="max-width: 400px; height: auto; border-radius: 0px; border: 1px solid #333;"/>
            </div>
          <% } %>

          <% if (item["paragraph-header"] || item["descriptive-paragraph"]) { %>
            <div style="margin: 20px; line-height: 1.6;">
              <% if (item["paragraph-header"]) { %>
                <h4 style="margin-bottom: 15px; font-size: 1.2rem;"><%- item["paragraph-header"] %></h4>
              <% } %>
              <% if (item["descriptive-paragraph"]) { %>
                <%- item["descriptive-paragraph"] %>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    </li>
  <% }); %>
</ul>

